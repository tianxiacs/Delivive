@using Delivive.Models;

@model FoodModel

@{
    ViewBag.Title = "Add Menu";
}

<body>
    <h1>Current Menu:</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Item</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        @foreach (FoodModel item in ViewBag.Result)
        {
            <tbody>
                <tr>
                    <td>@item.Food_name</td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                </tr>
            </tbody>

        }
    </table>



    <div style="margin-top:30px">
        <h1>Add a new item:</h1>

        <form action="addMenuAction">
            @Html.HiddenFor(i => i.Restaurant_id)
            <div class="form-group">
                <label>@Html.LabelFor(i => i.Food_name)</label>
                @Html.TextBoxFor(i => i.Food_name, new { Class="form-control", placeholder = "Food name", Style="max-width:25%" })
            </div>
            <div class="form-group">
                <label>@Html.LabelFor(i => i.Price)</label>
                @Html.TextBoxFor(i => i.Price, new { Class = "form-control", placeholder = "Price", Style = "max-width:25%" })
            </div>
            <div class="form-group">
                <label>@Html.LabelFor(i => i.Description)</label>
                @Html.TextAreaFor(i => i.Description, new { Class = "form-control", placeholder = "Description", Style = "max-width:30%" })
            </div>
            
            <button type="submit" class="btn" style="background-color:#64958f; color:#faf3dd; font-weight:500">Submit</button>
        </form>

    </div>


</body>
