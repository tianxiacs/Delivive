@using Delivive.Models;

@model DriverApplicationModel

@{
    ViewBag.Title = "Driver Application";
}

<body>
    <div style="margin-top:20px">
        <h1>Please fill out this application form:</h1>
        <form action="submitDriverApplication" style="margin-top:20px">

            <div class="form-group">
                <label>@Html.LabelFor(i => i.Name)</label>
                @Html.TextBoxFor(i => i.Name, new { Class = "form-control", placeholder = "Name", Style = "max-width:300px" })
            </div>
            <div class="form-group">
                <label>@Html.LabelFor(i => i.Password)</label>
                @Html.TextBoxFor(i => i.Password, new { Class = "form-control", Type = "password", placeholder = "Password", Style = "max-width:300px" })
            </div>
            <div class="form-group">
                <label>@Html.LabelFor(i => i.Phone)</label>
                @Html.TextBoxFor(i => i.Phone, new { Class = "form-control", maxlength = "10", placeholder = "Phone number", Style = "max-width:300px" })
                <small class="form-text text-muted">Please enter 10-digit phone number.</small>
            </div>
            <div class="form-group">
                <label>@Html.LabelFor(i => i.Availablility)</label>
                @Html.TextBoxFor(i => i.Availablility, new { Class = "form-control", placeholder = "Availability", Style = "max-width:300px" })
                <small class="form-text text-muted">Please enter your availability.</small>
            </div>
            <div class="form-group">
                <label>@Html.LabelFor(i => i.Driver_record)</label>
                @Html.CheckBoxFor(i => i.Driver_record)
                <small class="form-text text-muted">Please check this if you have a clean driving record.</small>
            </div>
            <div class="form-group">
                <label>@Html.LabelFor(i => i.Driver_license)</label>
                @Html.CheckBoxFor(i => i.Driver_license)
                <small class="form-text text-muted">Please check this if you have a valid driver's license.</small>
            </div>
            <div class="form-group">
                <label>@Html.LabelFor(i => i.Short_answer)</label>
                @Html.TextAreaFor(i => i.Short_answer, new { Class = "form-control", placeholder = "Please explain briefly how you qualify as a volunteer driver.", Style = "max-width:500px" })
            </div>

            <button type="submit" class="btn" style="background-color:#64958f; color:#faf3dd; font-weight:500">Submit</button>


        </form>
    </div>

</body>


